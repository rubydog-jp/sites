---
import PageLayout from '../layouts/PageLayout.astro';
import { getCollection } from 'astro:content';

// Get all news entries
const allNews = await getCollection('news');

// Sort news by date (newest first)
const sortedNews = allNews.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<PageLayout title="ニュース">
  <div class="news-container">
    <header class="page-header">
      <h1>ニュース</h1>
      <p class="page-description">最新情報をお届けします</p>
    </header>

    <div class="news-list">
      {sortedNews.map(async (news) => {
        const { Content } = await news.render();
        return (
          <article class="news-item">
            <div class="news-header">
              <time class="news-date" datetime={news.data.date.toISOString()}>
                {news.data.date.toLocaleDateString('ja-JP', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </time>
              {news.data.tags && (
                <div class="news-tags">
                  {news.data.tags.map(tag => (
                    <span class="tag">{tag}</span>
                  ))}
                </div>
              )}
            </div>
            <h2 class="news-title">{news.data.title}</h2>
            <div class="news-content">
              <Content />
            </div>
          </article>
        );
      })}
    </div>
  </div>
</PageLayout>

<style>
  .news-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .page-header {
    margin-bottom: 3rem;
    text-align: center;
  }

  .page-header h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: #1a1a1a;
  }

  .page-description {
    font-size: 1.125rem;
    color: #666;
  }

  .news-list {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .news-item {
    background: #ffffff;
    border-radius: 12px;
    padding: 2rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    border: 1px solid #e9ecef;
    transition: all 0.3s;
  }

  .news-item:hover {
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
    transform: translateY(-2px);
  }

  .news-header {
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .news-date {
    display: inline-block;
    font-size: 0.875rem;
    color: #666;
    background: #f8f9fa;
    padding: 0.375rem 0.875rem;
    border-radius: 20px;
    font-weight: 500;
  }

  .news-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    display: inline-block;
    font-size: 0.75rem;
    color: #EA4036;
    background: rgba(234, 64, 54, 0.1);
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    font-weight: 500;
    border: 1px solid rgba(234, 64, 54, 0.2);
  }

  .news-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: #1a1a1a;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .news-summary {
    font-size: 1rem;
    color: #666;
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  .news-content {
    font-size: 1rem;
    color: #333;
    line-height: 1.7;
  }

  .news-content :global(p) {
    margin-bottom: 1rem;
  }

  .news-content :global(p:last-child) {
    margin-bottom: 0;
  }

  .news-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1rem 0;
  }

  .news-content :global(a) {
    color: #EA4036;
    text-decoration: none;
  }

  .news-content :global(a:hover) {
    text-decoration: underline;
  }

  /* Empty state */
  .news-list:empty::after {
    content: 'まだニュースがありません';
    display: block;
    text-align: center;
    color: #999;
    font-size: 1.125rem;
    padding: 3rem;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .news-container {
      padding: 1rem;
    }

    .page-header h1 {
      font-size: 2rem;
    }

    .news-item {
      padding: 1.5rem;
    }

    .news-title {
      font-size: 1.5rem;
    }
  }
</style>
